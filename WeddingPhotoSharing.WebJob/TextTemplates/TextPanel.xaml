<UserControl
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"  Width="400"  Height="250">
    <Grid Background = "White">
<Image x:Name="image" HorizontalAlignment="Left" Height="250" Margin="0,0,0,0" VerticalAlignment="Top" Width="400" Source="@Model.Source" />
        <TextBlock Margin="20,0,20,0"  FontFamily="メイリオ" FontSize="32px" x:Name="textBlock1" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="@Model.Text" VerticalAlignment="Center" Foreground = "Blue" />
        <TextBlock Margin="0,0,20,20"  FontFamily="メイリオ" FontSize="24px" x:Name="textBlock2" HorizontalAlignment="Right"  TextWrapping="Wrap" Text="@Model.Name" VerticalAlignment="Bottom"/>
    </Grid></UserControl>